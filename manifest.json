{
  "comment": "Copyright (c) 2025 Jema Technology. Distributed under the license specified in the root directory of this project.",
  "name": "QuickText",
  "short_name": "QuickText",
  "description": "QuickText - Fast and simple text editor",
  "start_url": "/index.html",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#7376db",
  "orientation": "any",
  "icons": [
    {
      "src": "icon/logo.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any maskable"
    },
    {
      "src": "icon/16x16.png",
      "sizes": "16x16",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon/32x32.png",
      "sizes": "32x32",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon/48x48.png",
      "sizes": "48x48",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon/64x64.png",
      "sizes": "64x64",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon/96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon/128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon/256x256.png",
      "sizes": "256x256",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "file_handlers": {
    "text": {
      "accept": {
        "text/plain": [".txt", ".text", ".log", ".md", ".rtf"],
        "text/html": [".html", ".htm"],
        "text/css": [".css"],
        "application/json": [".json"],
        "application/xml": [".xml"],
        "application/javascript": [".js"],
        "text/x-python": [".py"],
        "text/x-csrc": [".c", ".h"],
        "text/x-c++src": [".cpp", ".hpp", ".cc", ".cxx"],
        "text/x-java": [".java"],
        "text/x-rustsrc": [".rs"],
        "text/x-go": [".go"],
        "text/x-script.python": [".pyw"]
      },
      "launch_type": "single-client"
    }
  },
  "share_target": {
    "action": "/",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    },
    "accept": ["text/plain", "text/markdown", "text/html"]
  },
  "protocol_handlers": [
    {
      "protocol": "quicktext",
      "url": "/?file=%s"
    }
  ],
  "categories": ["utility", "textEditor"],
  "prefer_related_applications": false
}
