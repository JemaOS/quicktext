{
  "comment": "Copyright (c) 2025 Jema Technology. Distributed under the license specified in the root directory of this project.",
  "name": "QuickText - JemaOS Text Editor",
  "short_name": "QuickText",
  "description": "QuickText - Fast and simple text editor for JemaOS",
  "version": "1.0.0",
  "start_url": "./",
  "scope": "./",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#7376db",
  "orientation": "any",
  "icons": [
    {
      "src": "icon/logo.svg",
      "sizes": "any",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "icon/16x16.png",
      "sizes": "16x16",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon/32x32.png",
      "sizes": "32x32",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon/48x48.png",
      "sizes": "48x48",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon/64x64.png",
      "sizes": "64x64",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon/96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon/128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon/256x256.png",
      "sizes": "256x256",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "file_handlers": [
    {
      "action": "/index.html",
      "name": "Text File",
      "accept": {
        "text/plain": [".txt", ".text", ".log"]
      },
      "launch_type": "single-client"
    },
    {
      "action": "/index.html",
      "name": "Markdown File",
      "accept": {
        "text/markdown": [".md", ".markdown"]
      },
      "launch_type": "single-client"
    },
    {
      "action": "/index.html",
      "name": "HTML File",
      "accept": {
        "text/html": [".html", ".htm"]
      },
      "launch_type": "single-client"
    },
    {
      "action": "/index.html",
      "name": "JSON File",
      "accept": {
        "application/json": [".json"]
      },
      "launch_type": "single-client"
    },
    {
      "action": "/index.html",
      "name": "JavaScript File",
      "accept": {
        "application/javascript": [".js"]
      },
      "launch_type": "single-client"
    },
    {
      "action": "/index.html",
      "name": "CSS File",
      "accept": {
        "text/css": [".css"]
      },
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "/index.html",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    },
    "accept": ["text/plain", "text/markdown", "text/html"]
  },
  "protocol_handlers": [
    {
      "protocol": "web+quicktext",
      "url": "/index.html?file=%s"
    }
  ],
  "categories": ["utility", "textEditor"],
  "prefer_related_applications": false
}
