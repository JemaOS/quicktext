{
  "name": "QuickText",
  "short_name": "QuickText",
  "description": "Editeur de texte rapide pour JemaOS",
  "version": "1.0.1",
  "start_url": "/index.html",
  "scope": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#7376db",
  "icons": [
    {
      "src": "icon/96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon/128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "icon/256x256.png",
      "sizes": "256x256",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "file_handlers": [
    {
      "action": "/index.html",
      "name": "Fichier texte",
      "accept": {
        "text/*": [".txt", ".text", ".md", ".log"]
      },
      "icons": [
        {
          "src": "icon/96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "shortcuts": [
    {
      "name": "Nouveau fichier",
      "url": "/index.html?action=new",
      "icons": [{ "src": "icon/96x96.png", "sizes": "96x96" }]
    }
  ],
  "permissions": [
    "fileSystem"
  ]
}